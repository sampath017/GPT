{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: torchrun (1 GPU)",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.run",
            "args": [
                "--nproc_per_node=1",  // set to >1 if debugging multi-GPU
                "src/main.py",         // your training entry script
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}

    "version": "0.2.0",
    "configurations": [
        {
            "name": "GPT",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "args": ["-Xfrozen_modules=off"]
        }
    ]
}